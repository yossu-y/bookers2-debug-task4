<% if users.exists? %>
  <% users.each do |user| %>
    <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
        <tr>
          <td><%= image_tag user.get_profile_image, size:"10×10" %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          
        </tr>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>